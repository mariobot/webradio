@model List<WebRadio.Models.Countries>

<h2 class="text-center">Contries</h2>

@if (Model.Count > 0)
{
    <div class="row text-center">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("ByCountry",new { id=item.value })">@item.name (@item.stationcount)</a>
        }
    </div>
}

