@model List<WebRadio.Models.RadioStation>

@{    
    ViewBag.Title = "RadioList";
}

<h2>RadioList</h2>

@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-1">
                <img src="@item.favicon" class="img-responsive" alt="" /> 
                <label class="label-primary">@item.name</label> 
            </div>
        }
    </div>
}

